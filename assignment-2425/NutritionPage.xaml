<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.NutritionPage"
             Title="Nutrition Tracker">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="⋮"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnMenuClicked"
                     x:Name="MenuButton"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Daily Nutrition Intake" FontSize="22" FontAttributes="Bold" />

            <!-- User can input their calories -->
            <Entry x:Name="FoodNameEntry"
                   Placeholder="Enter food name"
                   HorizontalOptions="FillAndExpand" />
            
            <Entry x:Name="CalorieEntry"
                   Placeholder="Enter calories"
                   Keyboard="Numeric"
                   HorizontalOptions="FillAndExpand" />
            <HorizontalStackLayout Spacing="10" HorizontalOptions="CenterAndExpand">

                <Entry x:Name="ProteinEntry"
                   Placeholder="Protein (g)"
                   Keyboard="Numeric"
                   WidthRequest="100"
                   HorizontalOptions="Center" />

                <Entry x:Name="CarbsEntry"
                   Placeholder="Carbs (g)"
                   Keyboard="Numeric"
                   WidthRequest="100"
                   HorizontalOptions="Center" />

                <Entry x:Name="FatsEntry"
                   Placeholder="Fats (g)"
                   Keyboard="Numeric"
                   WidthRequest="100"
                   HorizontalOptions="Center" />
            </HorizontalStackLayout>

            <Button Text="Add Calories"
                    Clicked="OnAddCaloriesClicked"
                    BackgroundColor="#00549E"
                    TextColor="White"
                    FontSize="{DynamicResource AppFontSize}"
                    CornerRadius="25"
                    WidthRequest="200"/>


            <Button Text="Save to Profile"
                    Clicked="OnSaveCaloriesClicked"
                    BackgroundColor="#00549E"
                    TextColor="White"
                    FontSize="{DynamicResource AppFontSize}"
                    CornerRadius="25"
                    WidthRequest="200"/>



            <!-- Display Logged Calories that user has inputted  -->
            <Label Text="Today's Total Calories:"
                   FontSize="{DynamicResource AppFontSize}"
                   FontAttributes="Bold"/>
            <Label x:Name="TotalCaloriesLabel"
                   FontSize="{DynamicResource AppFontSize}"
                   TextColor="Black"/>

            <!-- Display List of Logged Food Items -->
            <CollectionView x:Name="FoodLogCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="Gray">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Calories}" FontSize="16"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Onclick resets the daily calories  -->
            <Button Text="Reset Calories"
                    Clicked="OnResetCaloriesClicked"
                    BackgroundColor="Red"
                    TextColor="White"
                    FontSize="{DynamicResource AppFontSize}"
                    CornerRadius="25"
                    WidthRequest="200"/>

            <Button Text="Scan Barcode"
                    Clicked="OnScanBarcodeClicked"
                    BackgroundColor="#00549E"
                    TextColor="White"
                    FontSize="{DynamicResource AppFontSize}"
                    CornerRadius="25"
                    WidthRequest="200"/>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
