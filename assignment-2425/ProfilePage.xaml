<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.ProfilePage"
             Title="Profile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Calorie History"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Table for displaying logged calories -->
            <CollectionView x:Name="CalorieLogCollectionView"
                ItemsSource="{Binding CalorieRecords}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="Gray">
                            <VerticalStackLayout>
                                <Label Text="{Binding Date}" FontSize="18" FontAttributes="Bold"/>
                                <Label Text="{Binding Calories}" FontSize="16" TextColor="Black"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
