<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.MainPage"
             Title="Welcome to Nutrition Tracker App">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="25"
            VerticalOptions="Center">

            <!-- App Logo or Image -->
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                HorizontalOptions="Center"
                SemanticProperties.Description="dot net bot in a race car number eight" />

            <!-- Welcome Message -->
            <Label
                Text="Hello, welcome to your personal nutrition app. This app will help you track your nutrition intake that you are having on a daily basis!"
                FontSize="18"
                TextColor="Black"
                HorizontalTextAlignment="Center"
                SemanticProperties.HeadingLevel="Level1" />

            <!-- Pretty Sign Up/Log In Button -->
            <Button
                x:Name="SignInButton"
                Text="Sign Up / Log In"
                Clicked="OnSignInClicked"
                HorizontalOptions="Center"
                Padding="30,15"
                BackgroundColor="#007BFF"
                TextColor="White"
                FontSize="18"
                FontAttributes="Bold"
                CornerRadius="25"
                WidthRequest="200">
                <!-- Optional: Add a gradient background -->
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#007BFF" Offset="0.1" />
                        <GradientStop Color="#00BFFF" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>