<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:assignment_2425.ViewModels"
             x:Class="assignment_2425.LoginPage"
             Title="Login Page"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Padding="30" Spacing="25">

            <Label Text="Welcome Back!"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#00549E" />

            <!-- Email Entry -->
            <Frame CornerRadius="12" BorderColor="#CCCCCC" HasShadow="False" Padding="10">
                <Entry Placeholder="Email"
                       Keyboard="Email"
                       Text="{Binding Email}"
                       FontSize="{DynamicResource AppFontSize}"
                       TextColor="Black" />
            </Frame>

            <!-- Password Entry -->
            <Frame CornerRadius="12" BorderColor="#CCCCCC" HasShadow="False" Padding="10">
                <Entry Placeholder="Password"
                       IsPassword="True"
                       Text="{Binding Password}"
                       FontSize="{DynamicResource AppFontSize}"
                       TextColor="Black" />
            </Frame>

            <!-- Login Button -->
            <Button Text="Log In"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#00549E"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center" />

            <!-- Sign Up Button -->
            <Button Text="Sign Up"
                    Command="{Binding SignUpCommand}"
                    BackgroundColor="#00549E"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
