<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.LoginPage"
             Title="Login Page">

    <ScrollView>
        <VerticalStackLayout Padding="10,0,10,0" Spacing="15">

            <!-- Email Input -->
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />

            <!-- Password Input -->
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <!-- Login Button -->
            <Button Text="Log In" Clicked="OnLoginClicked" 
                    Padding="30,15"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold" 
                    CornerRadius="25"
                    WidthRequest="200">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00549E" Offset="0.1" />
                        <GradientStop Color="#00549E" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Sign Up Button -->
            <Button Text="Sign Up" Clicked="OnSignUpClicked" 
                    Padding="30,15"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    WidthRequest="200">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#00549E" Offset="0.1" />
                        <GradientStop Color="#00549E" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Error Message -->
            <Label x:Name="ErrorMessageLabel" TextColor="Red" IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
