<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.FlyoutBehavior="Disabled"
             x:Class="assignment_2425.LoginPage">



    <ScrollView>
        <VerticalStackLayout Padding="0,0,30,0" Spacing="15" >

            <!-- Grid for Back Button and Title -->
            <Grid ColumnDefinitions="Auto, *"
                  Padding="0,10,0,20"
                  VerticalOptions="Start"
                  HorizontalOptions="FillAndExpand">

                <!-- Back Button (Left-Aligned) -->
                <ImageButton Source="back_arrow_icon.svg"
                             Clicked="OnBackClicked"
                             BackgroundColor="Transparent"
                             WidthRequest="40"
                             HeightRequest="40"
                             HorizontalOptions="Start"
                             VerticalOptions="Start"
                             Margin="0,10,0,0"/>

                <!-- Page Title (Centered) -->
                <Label Text="Login Page"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>

            <!-- Email Input -->
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />

            <!-- Password Input -->
            <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

            <!-- Login Button -->
            <Button Text="Log In" Clicked="OnLoginClicked" 
                    Padding="30,15"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold" 
                    CornerRadius="25"
                    WidthRequest="200">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#007BFF" Offset="0.1" />
                        <GradientStop Color="#00BFFF" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Sign Up Button -->
            <Button Text="Sign Up" Clicked="OnSignUpClicked" 
                    Padding="30,15"
                    BackgroundColor="#007BFF"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    WidthRequest="200">
                <Button.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#007BFF" Offset="0.1" />
                        <GradientStop Color="#00BFFF" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>

            <!-- Error Message -->
            <Label x:Name="ErrorMessageLabel" TextColor="Red" IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
