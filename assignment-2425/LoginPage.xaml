<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment_2425.LoginPage"
             Title="Login Page"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Center" Padding="30" Spacing="25">

            
            <Label Text="Welcome Back!"
                   FontSize="26"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#00549E" />

            <!-- Email Entry -->
            <Frame CornerRadius="12" BorderColor="#CCCCCC" HasShadow="False" Padding="10">
                <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       Keyboard="Email"
                       FontSize="16"
                       TextColor="Black" />
            </Frame>

            <!-- Password Entry -->
            <Frame CornerRadius="12" BorderColor="#CCCCCC" HasShadow="False" Padding="10">
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       FontSize="16"
                       TextColor="Black" />
            </Frame>

            <!-- Login Button -->
            <Button Text="Log In"
                    Clicked="OnLoginClicked"
                    BackgroundColor="#00549E"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center" />

            <!-- Sign Up Button -->
            <Button Text="Sign Up"
                    Clicked="OnSignUpClicked"
                    BackgroundColor="#00549E"
                    TextColor="White"
                    FontSize="18"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
