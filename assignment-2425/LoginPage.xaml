<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.FlyoutBehavior="Disabled"
             x:Class="assignment_2425.LoginPage">

    <ScrollView Orientation="Vertical">
        <!-- Ensure scrolling is vertical -->
        <Grid RowDefinitions="Auto, *, Auto"
              ColumnDefinitions="*, *"
              VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand"
              Padding="20">

            <!-- Grid for Back Button and Title -->
            <Grid RowDefinitions="Auto"
                  ColumnDefinitions="Auto, *"
                  Grid.Row="0"
                  Grid.ColumnSpan="2"
                  VerticalOptions="Start"
                  HorizontalOptions="FillAndExpand">

                <!-- Back Button (Left-Aligned) -->
                <ImageButton Source="back_arrow_icon.svg"
                             Clicked="OnBackClicked"
                             BackgroundColor="Transparent"
                             WidthRequest="40"
                             HeightRequest="40"
                             HorizontalOptions="Start"
                             VerticalOptions="Center"
                             Margin="0,10,0,0"/>

                <!-- Page Title (Centered) -->
                <Label Text="Login Page"
                       FontSize="22"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Grid.Column="1" />
            </Grid>

            <!-- Login Form -->
            <VerticalStackLayout Grid.Row="1"
                                 Grid.ColumnSpan="2"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Fill"
                                 Spacing="15"
                                 Padding="20">

                <!-- Email Input -->
                <Entry x:Name="EmailEntry"
                       Placeholder="Email"
                       Keyboard="Email"
                       HorizontalOptions="FillAndExpand"
                       HeightRequest="50"/>

                <!-- Password Input -->
                <Entry x:Name="PasswordEntry"
                       Placeholder="Password"
                       IsPassword="True"
                       HorizontalOptions="FillAndExpand"
                       HeightRequest="50"/>

                <!-- Login Button -->
                <Button Text="Log In"
                        Clicked="OnLoginClicked"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        Padding="10"/>

                <!-- Sign Up Button -->
                <Button Text="Sign Up"
                        Clicked="OnSignUpClicked"
                        BackgroundColor="#007BFF"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        CornerRadius="25"
                        WidthRequest="200"
                        HorizontalOptions="Center"
                        Padding="10"/>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>
